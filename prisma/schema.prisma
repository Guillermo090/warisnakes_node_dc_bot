// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Accident {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  detail    String
  createdAt DateTime @default(now())
}

// Nuevos modelos para GT
model GtEvent {
  id           Int             @id @default(autoincrement())
  date         String          // Formato YYYY-MM-DD
  time         String          // Formato HH:mm
  guildId      String
  channelId    String
  messageId    String?         // ID del mensaje de Discord para editarlo
  organizerId  String          // ID del usuario organizador
  status       String          @default("CREATED") // CREATED, COMPLETED, CANCELLED
  createdAt    DateTime        @default(now())
  participants GtParticipant[]
}

model GtParticipant {
  id       Int      @id @default(autoincrement())
  userId   String
  eventId  Int
  joinedAt DateTime @default(now())
  event    GtEvent  @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model News {
  id        Int      @id @default(autoincrement())
  tibiaId   Int      @unique
  title     String
  date      DateTime
  createdAt DateTime @default(now())
}

model GuildConfig {
  id             String   @id // Guild ID
  newsChannelId  String?
  dailyChannelId String?
  tibiaWorld     String?  @default("Antica")
  updatedAt      DateTime @updatedAt
}